<resources>

    <!-- Base application theme. -->
    <!--Theme.AppCompat.Light.DarkActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bkg_default</item>
        <item name="actionBarSize">48dp</item>
        <item name="dl_background">@color/darkcharcoal</item>
        <item name="dl_background_light">@color/charcoal</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bkg_splash</item>
    </style>

    <style name="CodeStatusTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/darkcharcoal</item>
    </style>

    <style name="EditText.CreditCard" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:visibility">@integer/view_gone</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>


    <declare-styleable name="SympliTextView">
        <attr name="fontPath" format="string" />

        <!-- Inner shadow settings. -->
        <attr name="innerShadowColor" format="color" />
        <attr name="innerShadowDx" format="dimension" />
        <attr name="innerShadowDy" format="dimension" />
        <attr name="innerShadowRadius" format="dimension" />

        <!-- Outer shadow settings. -->
        <attr name="outerShadowColor" format="color" />
        <attr name="outerShadowDx" format="dimension" />
        <attr name="outerShadowDy" format="dimension" />
        <attr name="outerShadowRadius" format="dimension" />
    </declare-styleable>

