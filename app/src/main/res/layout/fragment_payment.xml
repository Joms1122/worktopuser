<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_place_header" />

        <TextView
            android:id="@+id/header_place_menu"
            style="@style/header_text_view_style_24sp"
            android:background="@color/charcoal"
            android:paddingBottom="@dimen/default_padding_half"
            android:paddingEnd="@dimen/default_margin_2x"
            android:paddingStart="@dimen/default_margin_2x"
            android:paddingTop="@dimen/default_padding_half"
            android:text="@string/payment"
            android:textAllCaps="true"/>

        <View style="@style/list_item_border_style" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkcharcoal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/pay_fragment_row_48dp"
                        android:layout_marginEnd="@dimen/default_margin_2x"
                        android:layout_marginStart="@dimen/default_margin_2x"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_order_original"
                            style="@style/list_item_text_view_style_18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_margin_half"
                            android:layout_weight="1"
                            android:text="@string/order_summary_payment_format"
                            tools:text="Order (8 items):" />

                        <TextView
                            android:id="@+id/tv_order_amount_original"
                            style="@style/list_item_text_view_style_bold_18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/order_amount_format" />
                        <TextView
                            android:id="@+id/tv_order_amount_original_aed"
                            style="@style/text_view_style_14sp_aed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aed" />
                    </LinearLayout>

                    <View style="@style/list_item_border_style" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spinner_height_44dp"
                        android:layout_marginEnd="@dimen/default_margin_2x"
                        android:layout_marginStart="@dimen/default_margin_2x"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/spinner_discount"
                                style="@style/spinner_button_style"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/button_add_drink_height_32dp"
                                android:text="@string/select_discount" />

                            <View style="@style/list_item_border_spinner_style" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/no_size"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_discount_amount"
                                style="@style/list_item_text_view_style_manatee_bold_18sp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="textEnd"
                                tools:text="@string/order_amount_format" />

                            <TextView
                                android:id="@+id/tv_discount_amount_aed"
                                style="@style/text_view_style_14sp_aed"
                                android:textColor="@color/manatee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/aed" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spinner_height_33dp"
                        android:layout_marginEnd="@dimen/default_margin_2x"
                        android:layout_marginStart="@dimen/default_margin_2x"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/spinner_tip"
                                style="@style/spinner_button_style"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/button_add_drink_height_32dp"
                                android:text="@string/select_tip" />

                            <View android:id="@+id/tip_spinner_underline"
                                style="@style/list_item_border_spinner_style"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/no_size"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_tip_amount"
                                style="@style/list_item_text_view_style_manatee_bold_18sp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="textEnd"
                                tools:text="@string/order_amount_format" />

                            <TextView
                                android:id="@+id/tv_tip_amount_aed"
                                style="@style/text_view_style_14sp_aed"
                                android:textColor="@color/manatee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/aed" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tv_vip_amount_container"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spinner_height_33dp"
                        android:layout_marginEnd="@dimen/default_margin_2x"
                        android:layout_marginStart="@dimen/default_margin_2x"
                        android:layout_marginTop="@dimen/default_margin"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/vip_switch"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            style="@style/single_toggle_radio_button_bold_14sp"
                            android:textAllCaps="false"
                            android:orientation="vertical"
                            tools:text="@string/vip_charge_button_format"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:id="@+id/btn_vip_info_container"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/padding_16dp"
                                android:paddingRight="@dimen/padding_16dp">
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_vip_info"
                                    style="@style/button_border_style_bold_info"
                                    android:layout_marginLeft="@dimen/no_margin"/>
                            </FrameLayout>

                            <TextView
                                android:id="@+id/tv_vip_amount"
                                style="@style/list_item_text_view_style_manatee_bold_18sp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textAlignment="textEnd"
                                tools:text="@string/order_amount_format" />

                            <TextView
                                android:id="@+id/tv_vip_amount_aed"
                                style="@style/text_view_style_14sp_aed"
                                android:textColor="@color/manatee"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/aed" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/service_charge_container"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_margin_2x"
                        android:layout_marginStart="@dimen/default_margin_2x"
                        android:layout_marginTop="@dimen/default_margin"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_service_charge"
                            style="@style/list_item_description_text_view_manatee_style_12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_margin_half"
                            android:layout_weight="1"
                            android:text="@string/service_charge_label" />

                        <TextView
                            android:id="@+id/tv_service_charge_amount"
                            style="@style/list_item_description_text_view_manatee_style_12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/order_amount_format" />

                        <TextView
                            style="@style/header_description_white_text_view_style_8sp"
                            android:textColor="@color/manatee"
                            android:layout_marginTop="@dimen/margin_size_correction_1dp"
                            android:layout_marginLeft="@dimen/margin_size_correction_1dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aed" />

                    </LinearLayout>

                    <View style="@style/list_item_border_style" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/pay_fragment_row_48dp"
                        android:layout_marginEnd="@dimen/default_margin_2x"
                        android:layout_marginStart="@dimen/default_margin_2x"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_order_total"
                            style="@style/list_item_text_view_mango_tango_style_18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_margin_half"
                            android:layout_weight="1"
                            android:text="@string/order_total"
                            android:textAllCaps="true" />

                        <TextView
                            android:id="@+id/tv_order_amount_total"
                            style="@style/list_item_text_view_style_mango_tango_bold_18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/order_amount_format" />

                        <TextView
                            android:id="@+id/tv_order_amount_total_aed"
                            style="@style/text_view_style_14sp_aed"
                            android:textColor="@color/mango_tango"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aed" />

                    </LinearLayout>

                    <View style="@style/list_item_border_style" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/charcoal"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/toggle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/switch_height_48dp"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:layout_marginLeft="@dimen/default_margin_2x"
                        android:layout_marginRight="@dimen/default_margin_2x"
                        android:layout_marginTop="@dimen/default_margin"
                        android:background="@drawable/switch_group_background"
                        android:checkedButton="@+id/offer"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/switch_at_bar"
                            style="@style/toggle_radio_button_bold_14sp"
                            android:layout_marginLeft="@dimen/switch_button_border_margin"
                            android:text="@string/switch_at_bar"
                            tools:checked="true" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/switch_at_table"
                            style="@style/toggle_radio_button_bold_14sp"
                            android:layout_marginRight="@dimen/switch_button_border_margin"
                            android:text="@string/switch_at_table"
                            tools:checked="true" />
                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/table_container"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spinner_height_44dp"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:layout_marginEnd="@dimen/default_margin_2x"
                        android:layout_marginStart="@dimen/default_margin_2x"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_ask_table_number"
                            style="@style/list_item_description_white_text_view_style_14sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/payment_ask_table_number"
                            android:textAlignment="textStart" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/spinner_table"
                                style="@style/spinner_button_style"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/button_add_drink_height_32dp"
                                android:text="@string/choose_table" />

                            <View style="@style/list_item_border_spinner_style" />

                        </LinearLayout>

                    </LinearLayout>

                    <View style="@style/list_item_border_style" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_margin_2x"
                        android:layout_marginStart="@dimen/default_margin_2x"
                        android:paddingTop="@dimen/default_margin"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">
                            <TextView
                                android:id="@+id/tv_card_holder"
                                style="@style/header_description_mango_tango_text_view_style_12sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/credit_card_holder"
                                android:visibility="gone"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_valid_until"
                            style="@style/header_description_mango_tango_text_view_style_12sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/credit_card_valid_until"
                            android:visibility="gone"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_margin_2x"
                        android:layout_marginStart="@dimen/default_margin_2x_edit_text"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/et_card_holder"
                            style="@style/bottom_edit_text_style_20sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:layout_weight="2"
                            android:backgroundTint="@color/manatee"
                            android:hint="@string/credit_card_holder" />

                        <EditText
                            android:id="@+id/et_valid_until"
                            style="@style/bottom_edit_text_style_20sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/manatee"
                            android:hint="@string/credit_card_valid_until"
                            tools:text="@string/order_amount_format" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_margin_2x"
                        android:layout_marginStart="@dimen/default_margin_2x"
                        android:layout_marginTop="@dimen/default_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">
                            <TextView
                                android:id="@+id/tv_card_no"
                                style="@style/header_description_mango_tango_text_view_style_12sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/credit_card_no"
                                android:visibility="gone"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_ccv_code"
                            style="@style/header_description_mango_tango_text_view_style_12sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/credit_card_ccv_code"
                            android:visibility="gone"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:layout_marginEnd="@dimen/default_margin_2x"
                        android:layout_marginStart="@dimen/default_margin_2x_edit_text"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/et_card_no"
                            style="@style/bottom_edit_text_style_20sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:layout_weight="2"
                            android:backgroundTint="@color/manatee"
                            android:hint="@string/credit_card_no" />

                        <EditText
                            android:id="@+id/et_ccv_code"
                            style="@style/bottom_edit_text_style_20sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/manatee"
                            android:hint="@string/credit_card_ccv_code"
                            tools:text="@string/order_amount_format" />

                    </LinearLayout>

                    <View style="@style/list_item_border_style" android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/saved_cards_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/charcoal">

                    <TextView
                        android:id="@+id/tv_saved_cards"
                        style="@style/header_description_mango_tango_text_view_style_12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/default_margin_2x"
                        android:paddingEnd="@dimen/default_margin_2x"
                        android:layout_marginTop="@dimen/no_margin"
                        android:paddingTop="@dimen/padding_8dp"
                        android:text="@string/select_saved_card"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_credit_cards"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/charcoal"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/default_margin_2x"
                        android:paddingTop="@dimen/padding_4dp"
                        android:paddingEnd="@dimen/default_margin_2x"
                        tools:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <View android:id="@+id/saved_card_border" style="@style/list_item_border_style"/>
                 </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkcharcoal"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/payment_fragment_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/default_margin"
                        android:paddingEnd="@dimen/default_margin"
                        android:paddingTop="@dimen/default_margin"
                        android:background="@color/darkcharcoal">
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/check_box_save_card"
                            android:paddingLeft="@dimen/default_margin_1_half"
                            android:paddingBottom="@dimen/default_margin_half"
                            android:layout_marginTop="@dimen/default_margin"
                            android:button="@drawable/check_box_button_options"
                            android:layout_marginStart="@dimen/default_margin_2x"
                            tools:checked="true"
                            style="@style/check_box_button_options"
                            android:text="@string/check_box_save_card"
                            android:gravity="center_vertical"
                            tools:text="Saved card info">
                        </androidx.appcompat.widget.AppCompatCheckBox>
                        <FrameLayout
                            android:id="@+id/btn_saved_card_info_container"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="@dimen/default_margin_half"
                            android:paddingLeft="@dimen/padding_16dp"
                            android:paddingRight="@dimen/padding_8dp">
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_saved_card_info"
                                style="@style/button_border_style_bold_info"
                                android:layout_marginLeft="@dimen/no_margin"/>
                        </FrameLayout>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/check_box_bill_to_cardholder"
                        android:paddingLeft="@dimen/default_margin_1_half"
                        android:paddingBottom="@dimen/default_margin_half"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:layout_marginTop="@dimen/default_margin"
                        android:button="@drawable/check_box_button_options"
                        android:layout_marginStart="@dimen/default_margin_2x"
                        tools:checked="true"
                        style="@style/check_box_button_options"
                        android:text="@string/check_box_bill_to_cardholder_payment"
                        android:gravity="center_vertical">
                    </androidx.appcompat.widget.AppCompatCheckBox>

                    <LinearLayout
                        android:id="@+id/tv_bill_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        tools:visibility="visible">
                        <TextView
                            style="@style/header_description_mango_tango_text_view_style_12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:layout_marginStart="@dimen/default_margin_2x"
                            android:layout_marginTop="@dimen/no_margin"
                            android:paddingTop="@dimen/no_padding"
                            android:text="@string/bill_to_full_name"
                            tools:visibility="visible"/>
                        <TextView
                            style="@style/header_text_view_style_24sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/no_margin"
                            android:paddingTop="@dimen/no_padding"
                            android:text=","
                            tools:visibility="visible"/>
                        <TextView
                            style="@style/header_description_mango_tango_text_view_style_12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_margin_2x"
                            android:layout_marginStart="@dimen/default_margin"
                            android:layout_marginTop="@dimen/no_margin"
                            android:paddingTop="@dimen/no_padding"
                            android:text=")"
                            tools:visibility="visible"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_bill_first_name"
                        style="@style/text_view_style_white_14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/no_margin"
                        android:layout_marginEnd="@dimen/default_margin_2x"
                        android:layout_marginStart="@dimen/default_margin_2x_edit_text"
                        android:paddingStart="@dimen/padding_4dp"
                        android:backgroundTint="@color/lightcharcoal"
                        android:hint="@string/bill_to_full_name_hint"
                        android:inputType="textCapWords"/>

                    <TextView
                        android:id="@+id/tv_bill_last_name"
