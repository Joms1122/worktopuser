<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkcharcoal"
        android:orientation="vertical">

        <TextView
            style="@style/header_text_view_style_24sp_bold_allcaps"
            android:text="@string/your_orders_header"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>

        <TextView
            style="@style/header_description_sunset_orange_text_view_style_12sp"
            android:text="@string/your_orders_description"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/default_margin_4dp"
            android:layout_marginBottom="@dimen/default_margin" />

        <View style="@style/header_border_style"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/default_margin_2x"
            android:layout_marginTop="@dimen/default_margin_2x"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/spinner_history_ordering"
                style="@style/spinner_button_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_add_drink_height_32dp"
                android:text="@string/select_tip" />

            <View style="@style/list_item_border_spinner_style" />

        </LinearLayout>

        <include layout="@layout/include_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/default_margin_2x"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>

    </LinearLayout>

    <include layout="@layout/include_main_progress_bar"/>

</FrameLayout>