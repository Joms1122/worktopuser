<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/hint_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:focusable="false"
        android:gravity="center_vertical"
        android:inputType="number"
        android:textColor="@color/pay_manatee"
        android:textSize="@dimen/input_text_font_size" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/input_text_font_size"
        android:background="@color/transparent"
        android:textColor="@color/pay_manatee"
        android:backgroundTint="@color/pay_manatee"
        app:layout_constraintBottom_toBottomOf="@+id/hint_view"
        app:layout_constraintEnd_toEndOf="@+id/hint_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/hint_view"
        app:layout_constraintTop_toTopOf="@+id/hint_view"
        tools:hint="0000 0000 0000 0000"/>

</merge>